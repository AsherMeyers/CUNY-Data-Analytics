DROP TABLE IF EXISTS Videos;
DROP TABLE IF EXISTS Reviews;

CREATE TABLE Videos
(
  unique_id int PRIMARY KEY NOT NULL,
  title varchar(30) NOT NULL,
  length int NOT NULL,
  URL varchar(100) NOT NULL
);
INSERT INTO Videos (unique_id, title, length, URL) 
VALUES (1, 'Gangnam Style', 252, 'https://www.youtube.com/watch?v=9bZkp7q19f0');

INSERT INTO  Videos (unique_id, title, length, URL) 
VALUES (2, 'Blank Space', 272, 'https://www.youtube.com/watch?v=e-ORhEE9VVg');

INSERT INTO Videos (unique_id, title, length, URL) 
VALUES (3, 'Baby', 224, 'https://www.youtube.com/watch?v=kffacxfA7G4');

SELECT * FROM Videos;

CREATE TABLE Reviews
(
   review_id int PRIMARY KEY NOT NULL,
   user_name varchar(20) NOT NULL,
   rating int NOT NULL,
   review varchar(120) NOT NULL,
   video_reviewed int NOT NULL
);

INSERT INTO Reviews (review_id, user_name, rating, review, video_reviewed) 
VALUES (1, 'Asher', 5, 'I love Korean BBQ', 1);

INSERT INTO Reviews (review_id, user_name, rating, review, video_reviewed) 
VALUES (2, 'Cyd', 5, 'Reminds me of Koreatown', 1);

